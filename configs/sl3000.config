CONFIG_TARGET_mediatek=y
CONFIG_TARGET_mediatek_filogic=y
CONFIG_TARGET_mediatek_filogic_DEVICE_sl3000-emmc=y

# 分区
CONFIG_TARGET_KERNEL_PARTSIZE=32
CONFIG_TARGET_ROOTFS_PARTSIZE=512
CONFIG_TARGET_ROOTFS_EXT4FS=n

# EMMC
CONFIG_PACKAGE_kmod-mmc=y
CONFIG_PACKAGE_kmod-mmc-mtk=y
CONFIG_PACKAGE_kmod-mt7981-emmc=y

# MT7981 WiFi
CONFIG_PACKAGE_kmod-mt_wifi=y
CONFIG_PACKAGE_hostapd-openssl=y
CONFIG_PACKAGE_wpad-openssl=y

# MT7981 HNAT
CONFIG_PACKAGE_kmod-mt7981-hnat=y

# MT7981 Ethernet
CONFIG_PACKAGE_kmod-mt7981-eth=y
CONFIG_PACKAGE_kmod-mt7981-switch=y

# 网络加速
CONFIG_PACKAGE_kmod-nf-flow=y
CONFIG_PACKAGE_kmod-nft-offload=y
CONFIG_PACKAGE_kmod-shortcut-fe=y
CONFIG_PACKAGE_kmod-shortcut-fe-cm=y
CONFIG_PACKAGE_irqbalance=y
CONFIG_PACKAGE_ethtool=y

# 基础系统
CONFIG_PACKAGE_dnsmasq-full=y
CONFIG_PACKAGE_dropbear=y
CONFIG_PACKAGE_firewall4=y
CONFIG_PACKAGE_nftables=y

# IPv6
CONFIG_PACKAGE_odhcp6c=y
CONFIG_PACKAGE_odhcpd-ipv6only=y
CONFIG_PACKAGE_ipv6helper=y

# LuCI
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-theme-bootstrap=y
CONFIG_PACKAGE_luci-app-firewall=y

# WAN（按需）
CONFIG_PACKAGE_ppp=y
CONFIG_PACKAGE_pppoe=y
CONFIG_PACKAGE_ppp-mod-pppoe=y
