# ===== 目标设备 =====
CONFIG_TARGET_mediatek=y
CONFIG_TARGET_mediatek_filogic=y
CONFIG_TARGET_mediatek_filogic_DEVICE_siluo_sl3000=y

# ===== 基础功能 =====
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-compat=y
CONFIG_PACKAGE_luci-base=y
CONFIG_PACKAGE_luci-mod-admin-full=y
CONFIG_PACKAGE_luci-theme-bootstrap=y

# ===== 网络基础 =====
CONFIG_PACKAGE_dnsmasq-full=y
CONFIG_PACKAGE_odhcpd-ipv6only=y
CONFIG_PACKAGE_odhcp6c=y
CONFIG_PACKAGE_ip-full=y        # 建议增加，提供完整 iproute2 功能
CONFIG_PACKAGE_ppp=y            # 建议增加，支持 PPPoE 宽带拨号
CONFIG_PACKAGE_ppp-mod-pppoe=y  # 建议增加，常见家庭宽带必备

# ===== 常用工具 =====
CONFIG_PACKAGE_htop=y
CONFIG_PACKAGE_curl=y
CONFIG_PACKAGE_wget-ssl=y
CONFIG_PACKAGE_coreutils=y      # 建议增加，提供常用 GNU 工具
CONFIG_PACKAGE_tar=y            # 建议增加，方便调试和打包

# ===== 无线驱动 =====
CONFIG_PACKAGE_kmod-mt7981-firmware=y
CONFIG_PACKAGE_kmod-mt76=y
CONFIG_PACKAGE_wireless-tools=y # 建议增加，提供 iwconfig/iwlist 等工具
CONFIG_PACKAGE_iw=y             # 建议增加，现代 iw 工具

# ===== eMMC / UBI 支持 =====
CONFIG_PACKAGE_kmod-mtd-rw=y
CONFIG_PACKAGE_mtd=y
CONFIG_PACKAGE_ubi-utils=y
CONFIG_PACKAGE_kmod-mtd=y       # 建议增加，确保 MTD 驱动完整
CONFIG_PACKAGE_kmod-ubifs=y     # 建议增加，支持 UBIFS 文件系统

# ===== 关闭不必要的包（加快编译） =====
CONFIG_PACKAGE_luci-app-dockerman=n
CONFIG_PACKAGE_docker=n
CONFIG_PACKAGE_kmod-usb-storage=n
CONFIG_PACKAGE_kmod-fs-ext4=n
CONFIG_PACKAGE_kmod-usb3=n      # 建议关闭，SL3000 不需要 USB3
CONFIG_PACKAGE_kmod-fs-vfat=n   # 建议关闭，减少文件系统支持
